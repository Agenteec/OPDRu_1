<Page x:Class="OPDRu.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OPDRu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Тест по русскому языку" FontSize="20" Margin="0,0,0,10" />
            <Button Content="Выбрать тест" Click="ChooseTestButton_Click" />
            <Button Content="Редактировать тесты" Click="EditTestButton_Click" />
            <Button Content="Просмотреть статистику" Click="ViewStatsButton_Click" />
        </StackPanel>
    </Grid>
</Page>
