<Page x:Class="OPDRu.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OPDRu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="20" Margin="0,0,0,10" />

            <StackPanel Margin="0,0,0,5">
                <TextBlock Text="Логин:" FontSize="14" Margin="0,0,0,2"/>
                <TextBox Name="UsernameBox" Width="200"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Пароль:" FontSize="14" Margin="0,0,0,2"/>
                <PasswordBox Name="PasswordBox1" Width="200"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Повтор пароля:" FontSize="14" Margin="0,0,0,2"/>
                <PasswordBox Name="PasswordBox2" Width="200"/>
            </StackPanel>

            <Button Content="Зарегистрироваться" Width="200" Click="RegisterButton_Click" />
            <Button Content="Войти" Width="200" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Page>
