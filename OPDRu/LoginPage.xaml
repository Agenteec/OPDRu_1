<Page x:Class="OPDRu.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OPDRu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Логин:" />
                <TextBox Name="UsernameBox" Width="200" Margin="0,0,0,5" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Пароль:" />
                <PasswordBox Name="PasswordBox" Width="200" Margin="0,0,0,10" />
            </StackPanel>
            <Button Content="Войти" Width="200" Click="LoginButton_Click" />
            <Button Content="Зарегистрироваться" Width="200" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Page>
