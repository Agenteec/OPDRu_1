<Page x:Class="OPDRu.TestSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OPDRu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestSelectionPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите тест" FontSize="20" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ListBox x:Name="TestListBox" DisplayMemberPath="Name" SelectionMode="Single" Margin="0,0,0,10"/>
            <Button Content="Начать тест" Click="StartTestButton_Click" Margin="0,0,0,10"/>
            <Button Content="Назад" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
